<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:showDividers="middle"
    android:weightSum="6">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <Button
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:id="@+id/color_rose"
            android:background="#FF99CC"
            android:layout_weight="1" />
        <Button
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:id="@+id/color_orange"
            android:background="#FFCC33"
            android:layout_weight="1" />
        <Button
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:id="@+id/color_green"
            android:background="#CCFF00"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <Button
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:id="@+id/color_purple"
            android:background="#CC99FF"
            android:layout_weight="1" />
        <Button
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:id="@+id/color_tiffany"
            android:background="#99FFCC"
            android:layout_weight="1" />
        <Button
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:id="@+id/color_blue"
            android:background="#66FFFF"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
